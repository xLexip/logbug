<!-- Light Theme -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Logcat" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- Window props -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:textViewStyle">@style/tvs</item>
    </style>

    <!-- TextView Style -->
    <style name="tvs" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/kumbhsans_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Theme specific colors -->
    <color name="fg">#000000</color>
    <color name="bg">@color/white</color>
    <color name="actionBar">#FFFFFF</color>
    <color name="devider">#1A000000</color>
    <color name="selection">#1924405F</color>

</resources>
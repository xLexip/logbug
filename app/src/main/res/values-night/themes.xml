<!-- Dark Theme -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Logcat" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- Window props -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/actionBar</item>
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:textViewStyle">@style/tvs</item>#
    </style>

    <!-- TextView Style -->
    <style name="tvs" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/kumbhsans_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Theme specific colors -->
    <color name="fg">@color/white</color>
    <color name="bg">@color/dark</color>
    <color name="bg_secondary">#F20C171B</color>
    <color name="actionBar">#0C171B</color>
    <color name="devider">#33000000</color>
    <color name="selection">#32ABBDD1</color>

</resources>